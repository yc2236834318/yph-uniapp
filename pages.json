	"globalStyle": {
		"navigationBarTextStyle": "black", // 导航栏文字颜色
		"navigationBarTitleText": "优品汇", // 导航栏默认标题
		"navigationBarBackgroundColor": "#ffffff", // 导航栏背景颜色
		"backgroundColor": "#F8F8F8" // 导航栏下拉背景颜色
	},
	// tabber 选项栏配置项
	"tabBar": {
		"color": "#636263", // 选项卡字体颜色
		"selectedColor": "#2c2c2c", // 选项卡字体颜色
		"backgroundColor": "#ffffff", // 选项栏背景色
		"borderStyle": "white", // 选项栏上边框颜色
		"spacing": "2px", // 图标与文字的间距
		// list:选项卡(2-5个)
		"list": [{
				"text": "首页", // 选项卡文字
				"pagePath": "pages/index/index", // 选项卡跳转路径
				"iconPath": "/static/tabs/home.png", // 未选中图标
				"selectedIconPath": "/static/tabs/home-fill.png" // 选中图标
			},
			{
				"text": "分类",
				"pagePath": "pages/list/list",
				"iconPath": "/static/tabs/all.png",
				"selectedIconPath": "/static/tabs/all-fill.png"
			},
			{
				"text": "购物车",
				"pagePath": "pages/cart/cart",
				"iconPath": "/static/tabs/cart.png",
				"selectedIconPath": "/static/tabs/cart-fill.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/user/user",
				"iconPath": "/static/tabs/customer.png",
				"selectedIconPath": "/static/tabs/customer-fill.png"
			}
		]
	},
	// 组件自动引用
	"easycom": {
		"autoscan": true, // 开启自动引用(@/components/组件名/组件名.vue)
		"custom": {
			// 自定义组件自动引用
			"index-(.*)": "@/pages/index/components/index-$1.vue",
			// 在@/pages/index/components/文件夹中,以index-开头的vue文件
			"cart-(.*)": "@/pages/cart/components/cart-$1.vue",
			"login-(.*)": "@/pages/login/components/login-$1.vue"
		}
	},
	"uniIdRouter": {}
}